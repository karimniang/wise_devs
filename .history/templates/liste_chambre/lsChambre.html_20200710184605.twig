{% extends 'base.html.twig' %}


{% block body %}
	{% set message = "false" %}
	<h2>Hello Voici la liste des chambres ! âœ…</h2>
	{% for etudiant in etudiants %}
		{% for chambre in chambres %}
			{% if etudiant.loger and etudiant.loger.id == chambre.id %}
				{% set message = "true" %}
				{% else %}
			{% endif %}
			{% set message = "false" %}

		{% endfor %}

	{% endfor %}

	<table id="table_id">
		<thead>
			<tr>
				<th>Numero</th>
				<th>Type</th>
				<th>Numero Bat</th>
				<th>Update</th>
				<th>Supp</th>
			</tr>
		</thead>
		<tbody>
			{% for chambre in chambres %}
				<tr>
					<td>{{chambre.numero}}</td>
					<td>{{chambre.type}}</td>
					<td>{{chambre.numeroBat}}</td>
					<td>
						<button class="btn-primary">
							<a href="{{path('chambre_update',{'id':chambre.id})}}"><img src="css/image/modif.png"></a>
						</button>
					</td>
					<td>
						<button class="btn-danger">
							<a href="{{path('etudiant_delete',{'id':chambre.id})}}" onclick="return confirm('{{message}}');"><img src="css/image/supp.png"></a>
						</button>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
